<%= simple_form_for(@quote_request_item_storage) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :capacity %>
    <%= f.input :backup_size %>
    <%= f.association :quote_request_item_server %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
