<%= simple_form_for(@vendor_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :purchased_price %>
    <%= f.input :description %>
    <%= f.association :vendor %>
    <%= f.association :quote_request_item %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
