<%- model_class = VendorItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => VendorItem %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:purchased_price) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vendor_items.each do |vendor_item| %>
      <tr>
        <td><%= vendor_item.id %></td>
        <td><%= vendor_item.name %></td>
        <td><%= vendor_item.purchased_price %></td>
        <td><%= vendor_item.description %></td>
        <td><%=l vendor_item.created_at, format: :long %></td>
        <td>
          <%= link_to vendor_item_path(vendor_item), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to vendor_item_path(vendor_item), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_vendor_item_path,
            :class => 'btn btn-primary' %>
