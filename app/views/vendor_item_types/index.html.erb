<h1>Listing vendor_item_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Vendor item</th>
      <th>Active</th>
      <th>Quote request item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendor_item_types.each do |vendor_item_type| %>
      <tr>
        <td><%= vendor_item_type.name %></td>
        <td><%= vendor_item_type.description %></td>
        <td><%= vendor_item_type.vendor_item %></td>
        <td><%= vendor_item_type.active %></td>
        <td><%= vendor_item_type.quote_request_item %></td>
        <td><%= link_to 'Show', vendor_item_type %></td>
        <td><%= link_to 'Edit', edit_vendor_item_type_path(vendor_item_type) %></td>
        <td><%= link_to 'Destroy', vendor_item_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

