<h1>Listing item_prices</h1>

<table>
  <thead>
    <tr>
      <th>Valid from</th>
      <th>Valid to</th>
      <th>Valid price</th>
      <th>Vendor item</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_prices.each do |item_price| %>
      <tr>
        <td><%= item_price.valid_from %></td>
        <td><%= item_price.valid_to %></td>
        <td><%= item_price.valid_price %></td>
        <td><%= item_price.vendor_item %></td>
        <td><%= link_to 'Show', item_price %></td>
        <td><%= link_to 'Edit', edit_item_price_path(item_price) %></td>
        <td><%= link_to 'Destroy', item_price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item price', new_item_price_path %>
