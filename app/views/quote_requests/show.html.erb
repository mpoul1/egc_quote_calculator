<%- model_class = QuoteRequest -%>
<div class="page-header">
  <h1><%=t '.title', :default => QuoteRequest %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:project) %></dt>
      <dd><pre class="prettyprint"><%= @quote_request.project %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:requested_at) %></dt>
      <dd><pre class="prettyprint"><%= @quote_request.requested_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @quote_request.description %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              quote_requests_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_quote_request_path(@quote_request), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              quote_request_path(@quote_request),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

